@startuml
' ============================================================
'  Medstracks – C4 Container Diagramg
' ============================================================

!NEW_C4_STYLE=1
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

SHOW_PERSON_OUTLINE()

title Medstrack – Backend User Management (C4 Container Diagram)

Person(user, "End User", "Paciente o profesional de la salud que usa Medstrack")

System_Boundary(medstrack, "Medstrack Platform") {

    Container(api, "User Management API", "Java 17 + Spring Boot", "Endpoints REST para registro, autenticación y gestión de usuarios")

    ContainerDb(db, "PostgreSQL Database", "PostgreSQL", "Usuarios, credenciales cifradas y metadatos")
}

System_Ext(email, "Email Service", "SMTP / Cloud", "Envío de correos de verificación")
System_Ext(auth, "Auth Provider (Future)", "OAuth2 / JWT", "Proveedor externo de autenticación")

Rel(user, api, "Usa", "HTTPS / JSON")
Rel(api, db, "Lee y escribe", "JPA / Hibernate")
Rel(api, email, "Envía correos", "SMTP")
Rel(api, auth, "Integra", "OAuth2 / JWT")

SHOW_LEGEND()
footer Medstrack · Arquitectura C4 · Felipe Sulez

@enduml

